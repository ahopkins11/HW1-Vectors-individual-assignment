#include <iostream>
#include "Vector.h"

int main() {
    // ---- FEATURE: Default Constructor ----
    Vector v;

    // ---- FEATURE: push_back (Automated 1000+ pushes) ----
    for (int i = 0; i < 1000; i++) {
        v.push_back(i * 2);
    }
    std::cout << "Size after 1000 pushes: " << v.size() << std::endl;
    std::cout << "Capacity after 1000 pushes: " << v.capacity() << std::endl;

    // ---- FEATURE: operator[] (Access/Modify) ----
    std::cout << "Element at index 500: " << v[500] << " (Expected 1000)" << std::endl;
    v[500] = 42; 
    std::cout << "Modified index 500: " << v[500] << " (Expected 42)" << std::endl;

    // ---- FEATURE: size() for loop bounds (Printing small segment) ----
    std::cout << "First 5 elements: ";
    for (int i = 0; i < 5; i++) {
        std::cout << v[i] << " ";
    }
    std::cout << std::endl;

    // ---- FEATURE: Assignment Operator (Deep Copy Check) ----
    Vector v2;
    v2 = v;
    v2[0] = 999;
    std::cout << "Assignment Test - V2[0]: " << v2[0] << " | V[0]: " << v[0] << " (Should be different)" << std::endl;

    // ---- FEATURE: Copy Constructor (Deep Copy Check) ----
    Vector v3(v);
    v3[0] = 777;
    std::cout << "Copy Cons Test - V3[0]: " << v3[0] << " | V[0]: " << v[0] << " (Should be different)" << std::endl;

    return 0;
}
